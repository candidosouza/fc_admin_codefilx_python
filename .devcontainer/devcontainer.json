// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "Micro videos Python",

	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.yaml",
		"docker-compose.yml"
	],

	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "app",

	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/home/python/app",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],

	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	// "shutdownAction": "none",

	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "cat /etc/os-release",

	// Configure tool-specific properties.
	// "customizations": {},

	"extensions": [
		"ms-python.python",
		"sourcery.sourcery", // para dicas no python sobre refatoração entre outros
		"SonarSource.sonarlint-vscode", // análise de qualidade de código
		"github.copilot", // nosso copiloto, sem comentários...
		"visualstudioexptteam.vscodeintellicode",
		"vivaxy.vscode-conventional-commits",
		"ms-azuretools.vscode-docker", // para ver tudo sobre o docker, container, imagens, tec...
		"jebbs.plantuml", // para diagramas uml
		"streetsidesoftware.code-spell-checker", // para verificar gramatica, sublinha em azul cas esteja arredo
		"streetsidesoftware.code-spell-checker-portuguese-brazilian", // para verificar gramatica em portugês, sublinha em azul cas esteja arredo
		"github.vscode-pull-request-github", // para abrie pr e issues direto no vscode
		"github.remotehub", // para clonar qualquer projeto local para o github e demais tarefas
		"donjayamanne.githistory", // para histórico no git
		"eamodio.gitlens", // para git com históricos etc...
		"ms-kubernetes-tools.vscode-kubernetes-tools", //para o kubernetes e tal...
		"humao.rest-client", // para rodar requisições http 
		"bungcip.better-toml", //para arquivos toml
		"ms-python.pylint"
	],

	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "python",

	"settings": {
		"terminal.integrated.defaultProfile.linux": "bash",
		"python.pythonPath": "/usr/local/bin/python"
	}
}